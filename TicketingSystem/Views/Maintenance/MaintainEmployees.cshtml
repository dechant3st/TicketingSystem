@model List<MaintainEmployeeViewModel>

@{
    ViewBag.PageTitle = "Manage Employee";

    var count = 0;
}


<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-header border-0">
                <div class="row align-items-center">
                    <div class="col">
                        <h3 class="mb-0">Employee List</h3>
                    </div>
                    <div class="col text-right">
                        <a asp-action="newemployee"
                           class="btn btn-sm btn-primary">New Employee</a>
                    </div>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Name</th>
                            <th scope="col">Email Address</th>
                            <th scope="col">Phone Number</th>
                            <th scope="col">Role</th>
                            <th scope="col">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var user in Model)
                            {
                                count++;
                                <!--<tr onclick="document.getElementById('btn-@user.Id').click()">-->
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>
                                        <a asp-action="editemployee"
                                           asp-route-id="@user.Id"
                                           class="btn btn-link btn-sm mr-1"
                                           id="btn-@user.Id">
                                            <i class="fa fa-cog"></i>
                                        </a>
                                        @string.Concat(user.FirstName, " ", user.LastName)
                                    </td>
                                    <td>@user.Email</td>
                                    <td>@user.Phone</td>
                                    <td>@user.RoleName</td>
                                    <td>
                                        @if (user.IsActive)
                                        {
                                            <span class="badge badge-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-danger">Deactivated</span>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <th colspan="6" class="text-center">No records found!</th>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
}

@section Scripts {
}

@section Breadcrumb {
    <nav class="d-none d-md-inline-block ml-md-4">
        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
            <li class="breadcrumb-item">
                <i class="fa fa-home text-white"></i>
            </li>
            <li class="breadcrumb-item text-white">
                Maintenance
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                Manage Employee
            </li>
        </ol>
    </nav>
}