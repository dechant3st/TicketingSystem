                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="user-dialog" role="dialog"></div>

@section Styles {
<style>
    .modal-body {
        max-height: calc(100vh - 220px);
        overflow-x: hidden;
        overflow-y: scroll;
    }
</style>
}

@section Scripts {
<script>
    function OpenModal(btn) {
        $.get($(btn).attr('formaction'), function (data) {
            $('#user-dialog').html(data);
            $('#user-dialog').modal('show');
        });
    }
</script>
}

@section Breadcrumb {
<nav class="d-none d-md-inline-block ml-md-4">
    <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
        <li class="breadcrumb-item">
            <i class="fa fa-home text-white"></i>
        </li>
        <li class="breadcrumb-item text-white">
            Credentials
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            Manage User
        </li>
    </ol>
</nav>
}